# Production Environment Variables
# Copy this file to .env.production and fill in your values

# Database (SQLite in Docker volume)
DATABASE_URL="file:./prisma/dev.db"

# NextAuth.js (Authentication)
NEXTAUTH_SECRET="your-production-secret-min-32-chars-replace-this"
NEXTAUTH_URL="https://yourdomain.com"

# Redis (Docker internal network)
REDIS_HOST="redis"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB="0"

# Facebook App (Production)
FACEBOOK_APP_ID="your-production-facebook-app-id"
FACEBOOK_APP_SECRET="your-production-facebook-app-secret"
FACEBOOK_REDIRECT_URI="https://yourdomain.com/api/social/facebook/callback"

# Twitter App (Production)
TWITTER_CLIENT_ID="your-production-twitter-client-id"
TWITTER_CLIENT_SECRET="your-production-twitter-client-secret"
TWITTER_REDIRECT_URI="https://yourdomain.com/api/social/twitter/callback"

# TikTok App (Production)
TIKTOK_CLIENT_KEY="your-production-tiktok-client-key"
TIKTOK_CLIENT_SECRET="your-production-tiktok-client-secret"
TIKTOK_REDIRECT_URI="https://yourdomain.com/api/social/tiktok/callback"

# Next.js Public Variables
NEXT_PUBLIC_API_BASE_URL="https://yourdomain.com/api"
NEXT_PUBLIC_APP_NAME="Schedy"

