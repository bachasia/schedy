# Database
DATABASE_URL="file:./dev.db"

# NextAuth.js (Authentication)
NEXTAUTH_SECRET="replace-with-secure-random-string-min-32-chars"
NEXTAUTH_URL="http://localhost:3001"

# Redis (Required for Queue Management)
# Default local Redis configuration
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB="0"

# Facebook App Credentials (for Facebook/Instagram integration)
# Get these from https://developers.facebook.com/
FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"
FACEBOOK_REDIRECT_URI="http://localhost:3001/api/social/facebook/callback"

# Instagram App (uses same Facebook App credentials)
# Instagram Business accounts must be connected to Facebook Page

# TikTok App Credentials (for TikTok video posting)
# Get these from https://developers.tiktok.com/
TIKTOK_CLIENT_KEY="your-tiktok-client-key"
TIKTOK_CLIENT_SECRET="your-tiktok-client-secret"
TIKTOK_REDIRECT_URI="http://localhost:3001/api/social/tiktok/callback"

# Twitter/X App Credentials (for Twitter/X posting)
# Get these from https://developer.twitter.com/
TWITTER_CLIENT_ID="your-twitter-oauth2-client-id"
TWITTER_CLIENT_SECRET="your-twitter-oauth2-client-secret"
TWITTER_REDIRECT_URI="http://localhost:3001/api/social/twitter/callback"

# Cloudflare R2 (Media Storage)
# Get these from Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_ACCOUNT_ID="your-r2-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="your-bucket-name"
# Public URL for accessing uploaded files (use your custom domain or R2 public URL)
R2_PUBLIC_URL="https://your-domain.com"

# Next.js Public Variables (exposed to browser)
NEXT_PUBLIC_API_BASE_URL="http://localhost:3001/api"
NEXT_PUBLIC_APP_NAME="Schedy"


